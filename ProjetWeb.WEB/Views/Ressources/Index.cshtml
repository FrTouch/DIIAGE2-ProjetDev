@model IEnumerable<ProjetWeb.Model.RessourceModel>

@{
    ViewBag.Title = "Gestion des ressources";
}

<h2>Gestion des ressources</h2>

<p>
    @Html.ActionLink("Ajouter une ressource", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dispo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_achat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qr_code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.purge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type.nom)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dispo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_achat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qr_code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.purge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type.nom)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
